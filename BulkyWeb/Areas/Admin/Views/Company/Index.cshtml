
@* @model List<Company> *@



<div class="container">
    <div class="row pt-2 pb-3">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-primary">
                <i class="bi bi-plus-circle" style="accent-color:white"></i> Create Company
            </a>
        </div>

    </div>

</div>


<table id="tblDataCompany" class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>StreetAddress</th>
            <th>City</th>
            <th>State</th>
            <th>PostalCode</th>
            <th>PhoneNumber</th> 
           
            @* <th>Edit  / Delete</th>  *@
        </tr>
    </thead>
    
</table>


@section Scripts{
    <script src="~/js/Company.js"></script>
}
