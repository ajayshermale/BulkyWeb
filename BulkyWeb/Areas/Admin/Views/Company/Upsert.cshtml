@model Company

<form method="post" enctype="multipart/form-data">


    <div class="border p-3 mt-4">
        <div class="row pb-2">

            <h2 class="text-primary">@(Model.Id == 0 ? "Create" : "Update") Company</h2>
        </div>

        <div class="row" style="margin: 29px;">
            <div class="col-10">
                <input asp-for="Id" hidden />
                <div class="md-3  pd-1">
                    <label asp-for="Name" class="pd-0"> </label>
                    <input asp-for="Name" class="form-control" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="md-3 pd-1">
                    <label asp-for="StreetAddress" class="pd-0"></label>
                    <input asp-for="StreetAddress" class="form-control" />
                    <span asp-validation-for="StreetAddress" class="text-danger"></span>
                </div>
                <div class="md-3  pd-1">
                    <label asp-for="City" class=" pd-0"></label>
                    <input asp-for="City" class="form-control"></input>
                    @* <span asp-validation-for="Company.Description" class="text-danger"></span> *@
                </div>

                <div class="md-3 pd-1">
                    <label asp-for="State" class="pd-0"></label>
                    <input asp-for="State" class="form-control" />
                    <span asp-validation-for="State" class="text-danger"></span>
                </div>
                <div class="md-3 pd-1">
                    <label asp-for="PostalCode" class="pd-0"></label>
                    <input asp-for="PostalCode" class="form-control" />
                    <span asp-validation-for="PostalCode" class="text-danger"></span>
                </div>
                <div class="md-3 pd-1">
                    <label asp-for="PhoneNumber" class="pd-0"></label>
                    <input asp-for="PhoneNumber" class="form-control" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
               

                <div class="row">
                    <div class="col-6 col-md-3">
                        @if (Model.Id != 0)
                        {
                            <button type="submit" class="btn btn-primary form-control">Update</button>
                        }
                        else
                        {
                            <button type="submit" class="btn btn-primary form-control">Create</button>
                        }
                    </div>
                    <div class="col-6 col-md-3">
                        <a asp-controller="Company" asp-action="Index" class="btn btn-outline-secondary border">
                            Back To List
                        </a>
                    </div>

                </div>

            </div>
          
        </div>


</form>
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />

    }
}

